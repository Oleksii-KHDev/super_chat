generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./super_chat.db"
}

model User {
  id BigInt @id @default(autoincrement())
  email String @unique
  name String
  homePage String? @map("home_page")
  password String
  comments Comments[]

  @@map("users")
}

model Comments {
  id BigInt @id @default(autoincrement())
  parentId   Int @map("parent_id") @default(0)
  userId BigInt @map("user_id")
  user User @relation(fields: [userId], references: [id])
  text String

  @@map("Comments")
}
